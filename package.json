{
	"name": "website",
	"version": "1.1.4",
	"scripts": {
		"dev": "vite dev",
		"build": "npm run format && npm run lint && vite build",
		"build:analyze": "vite build --mode analyze",
		"build:production": "NODE_ENV=production vite build",
		"preview": "vite preview --host",
		"test": "npm run test:integration && npm run test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check --write . && eslint .",
		"lint:fix": "eslint . --fix && prettier --write .",
		"format": "prettier --write .",
		"test:integration": "playwright test",
		"test:unit": "vitest",
		"test:coverage": "vitest run --coverage",
		"deploy:staging": "npm run build && npm run deploy:ftp:staging",
		"deploy:production": "npm run test && npm run build:production && npm run deploy:ftp:production"
	},
	"devDependencies": {
		"@fontsource/fira-mono": "^5.1.0",
		"@neoconfetti/svelte": "^2.2.1",
		"@playwright/test": "^1.48.2",
		"@sveltejs/adapter-auto": "^3.3.1",
		"@sveltejs/kit": "^2.8.2",
		"@sveltejs/vite-plugin-svelte": "^4.0.0",
		"@testing-library/svelte": "^5.2.8",
		"@types/eslint": "^9.6.1",
		"@types/node": "^24.1.0",
		"@typescript-eslint/eslint-plugin": "^8.12.2",
		"@typescript-eslint/parser": "^8.12.2",
		"eslint": "^9.14.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.46.0",
		"jsdom": "^26.1.0",
		"prettier": "^3.3.3",
		"prettier-plugin-svelte": "^3.2.7",
		"sass": "^1.80.6",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.5",
		"svelte-preprocess": "^6.0.3",
		"tslib": "^2.8.1",
		"typescript": "^5.6.3",
		"vite": "^5.4.10",
		"vitest": "^2.1.4",
		"web-vitals": "^5.0.3"
	},
	"type": "module",
	"dependencies": {
		"@sveltejs/adapter-static": "^3.0.1"
	}
}
